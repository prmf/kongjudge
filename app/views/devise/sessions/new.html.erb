<h2>Log in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


	<div class="clearfix">
		<%= f.label :username %>
		<div class="input">
			<%= f.text_field :username %>
		</div>
	</div>
	

	<div class="clearfix">
		<%= f.label :password %>
		<div class="input">
			<%= f.password_field :password %>
		</div>
	</div>
	
<% if devise_mapping.rememberable? -%>
	<div class="clearfix">
		<div class="input">
			<ul class="inputs-list">
			<li>
				<label>
				<%= f.check_box :remember_me %> 
				<span>Remember me</span>

				</label>
			</li>
		</div>
	</div>
<% end -%>

  <div class="actions"><%= f.submit "Sign in", :class=>"btn primary" %>&nbsp;<button type="reset" class="btn">Cancel</button></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
