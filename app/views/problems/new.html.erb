<% title "New Problem" %>

<h2><%= yield(:title) %></h2><br/>
 
<%= form_for(@problem) do |f| %>
  <% if @problem.errors.any? %>


  <div class="alert-message block-message info" id="errorExplanation">
    <a class="close" href="#">×</a>
    <p><strong>Holy guacamole! This is a warning!</strong> Best check yo self, you’re not looking too good.</p></br>
    <ul>
    <% @problem.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>

  <% end %>

<div class="clearfix">
	<%= f.label :problem_title, "Problem Title" %><br />
	<div class="input">
		<%= f.text_field :problem_title %>
	</div>
</div>

<div class="clearfix">
	<%= f.label :problem_short_title, "Problem Short Title" %><br />
	<div class="input">
		<%= f.text_field :problem_short_title %>
	</div>
</div>

          <div class="clearfix">
            <label for="textarea">Problem Statement</label>

            <div class="input">
		<%= f.text_area :problem_statement, :size => "8" %>
              <span class="help-block">
		Pull on the corner to expand this box
              </span>
            </div>
          </div><!-- /clearfix -->

<div class="clearfix">
            <label for="fileInput">Input File</label>

            <div class="input">
		<%= f.file_field :input %>
            </div>
          </div><!-- /clearfix -->

          <div class="clearfix">
            <label for="fileInput">Solution File</label>

            <div class="input">
		<%= f.file_field :solution %>
            </div>
          </div><!-- /clearfix -->

          
<div class="clearfix">
	<%= f.label :time_limit, "Time Limit" %><br />
	<div class="input">
		<%= f.text_field :time_limit %>
	</div>
</div>

  <div class="actions"><%= f.submit "Create Problem", :class=>"btn primary" %>&nbsp;<button type="reset" class="btn">Cancel</button></div>
<% end %>
